@model TestGenerator.Web.Models.QuestionCreationViewModel
@using TestGenerator.Model.Helpers

@{
    ViewData["Title"] = "Ajouter une question";
}

<h2>Ajouter une question</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" /> <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionType" class="control-label"></label>
                <select class="form-control" id="questionTypeSelect" asp-for="QuestionType" asp-items="Html.GetEnumSelectList<TestGenerator.Model.Constants.QuestionTypeEnum>()"></select>
            </div>
            <!-- Section question Oui / Non -->
            <div class="form-group answers" id="yesno">
                <table width="100%">
                    <thead>
                        <tr>
                            <th>Réponses possibles</th>
                            <th>Réponse correcte</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><label class="control-label" for="yes">Oui</label></td>
                            <td><input class="form-control" type="radio" id="yes" name="yesno" value="yes" /></td>
                        </tr>
                        <tr>
                            <td><label class="control-label" for="no">Non</label></td>
                            <td><input class="form-control" type="radio" id="no" name="yesno" value="no" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- Section question Oui / Non -->
            <!-- Section question choix multiple -->
            <div class="form-group answers" id="multichoice">
                <table width="100%">
                    <thead>
                        <tr>
                            <th>Réponses possibles</th>
                            <th>Réponse correcte</th>
                        </tr>
                    </thead>
                    <tbody id="mcq">
                    </tbody>
                </table>
                <input id="add-multi-choice" type="button" class="btn btn-default" value="Ajouter un champ de réponse" />
            </div>
            <!-- Section question choix multiple -->
            <!-- Section question choix unique -->
            <div class="form-group answers" id="singlechoice">
                <table width="100%">
                    <thead>
                        <tr>
                            <th>Réponses possibles</th>
                            <th>Réponse correcte</th>
                        </tr>
                    </thead>
                    <tbody id="scq">
                    </tbody>
                </table>
                <input id="add-single-choice" type="button" class="btn btn-default" value="Ajouter un champs réponse" />
            </div>
            <!-- Section question choix unique -->


            <div class="form-group">
                <input type="submit" value="Ajouter cette question" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
