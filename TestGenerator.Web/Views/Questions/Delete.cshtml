@model TestGenerator.Model.Entities.Question
@using TestGenerator.Model.Entities

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Question</h4>
    <hr />
    <div class="row">
        <dl class="dl-horizontal col-md-4">
            <dt>
                @Html.DisplayNameFor(model => model.Text)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Text)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.QuestionType)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.QuestionType)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Module)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Module.Title)
            </dd>
        </dl>
        <dl class="dl-horizontal col-md-4">
            <dt>
                @Html.DisplayNameFor(model => model.Answers)
            </dt>
            <dd>
                <ul>
                    @foreach (Answer answer in Model.Answers)
                    {
                        <li>
                            @answer.Text
                            @if (answer.IsValid)
                            {
                                <svg class="bi bi-check-square" width="1em" height="1em" viewBox="0 0 16 16" fill="green" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                    <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                                </svg>
                            }
                            else
                            {
                                <svg class="bi bi-x-square" width="1em" height="1em" viewBox="0 0 16 16" fill="red" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                    <path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708-.708l7-7a.5.5 0 0 1 .708 0z" />
                                    <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 0 0 0 .708l7 7a.5.5 0 0 0 .708-.708l-7-7a.5.5 0 0 0-.708 0z" />
                                </svg>
                            }
                        </li>
                    }
                </ul>
            </dd>
        </dl>
        <dl class="dl-horizontal col-md-4">
            <dt>
                @Html.DisplayNameFor(model => model.Exams)
            </dt>
            <dd>
                <ul>
                    @foreach (ExamQuestion question in Model.Exams)
                    {
                        <li><a asp-controller="Exams" asp-action="Details" asp-route-id="@question.ExamId">@question.Exam.Name</a></li>
                    }
                </ul>
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="QuestionId" />
        <input type="submit" value="Supprimer" class="btn btn-default" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
