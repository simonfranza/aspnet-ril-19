@using TestGenerator.Model.Entities
@model Question

@{ ViewData["Title"] = string.Format("{0} - Details", @Model.Text); }

<div class="row justify-content-center mt-5">
    <div class="col-10">
        
        <h2>@Model.Text</h2>
        <a class="badge badge-primary" asp-controller="Modules" asp-action="Details" asp-route-id="@Model.Module.ModuleId">@Model.Module.Title</a>
        <span class="text-muted"> - @Html.DisplayFor(model => model.QuestionType)</span>

        <h4 class="mt-3">@Html.DisplayNameFor(model => model.Answers)</h4>
        <ul class="list-unstyled p-lg-3">
            @foreach (Answer answer in Model.Answers)
            {
                @if (answer.IsValid)
                {
                    <li class="valid-answer">@answer.Text</li>
                }
                else
                {
                    <li class="invalid-answer">@answer.Text</li>
                }
            }
        </ul>
        
        <div class="mt-4">
            <a class="btn btn-primary" asp-action="Index">Retour à la liste</a>
        </div>
    </div>
</div>

<style>
    .valid-answer {
        color: #3c763d;
        background-color: #dff0d8;
        border: solid 1px #3c763d;
        border-radius: 5px;
        padding: .5em 1em;
        margin: 1em auto;
    }

    .invalid-answer {
        color: #aa4847;
        background-color: #f2dede;
        border: solid 1px #aa4847;
        border-radius: 5px;
        padding: .5em 1em;
        margin: 1em auto;
    }
</style>