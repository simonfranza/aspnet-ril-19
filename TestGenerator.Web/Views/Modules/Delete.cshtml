@model TestGenerator.Model.Entities.Module

@{
    ViewData["Title"] = $"{Model.Title} - Suppression";
}

<div class="row mt-5 justify-content-center">
    <div class="col-10">
        <h2>Voulez-vous vraiment supprimer le module @Model.Title ?</h2>
        <hr/>
        <h3>Les éléments suivants seront également supprimés : </h3>
        
        <h4 class="mt-5">Examens</h4>
        <ul>
            @foreach (var exam in @Model.Exams)
            {
                <li><a asp-controller="Exams" asp-action="Details" asp-route-id="@exam.ExamId">@exam.Name</a></li>
            }
        </ul>
        
        <h4 class="mt-5">Questions</h4>
        <ul>
            @foreach (var question in @Model.Questions)
            {
                <li>@question.Text</li>
            }
        </ul>

        <hr class="mt-5"/>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ModuleId"/>
            <input class="btn btn-danger" type="submit" value="Supprimer le module"/>
            <a class="btn btn-outline-primary" asp-action="Index">Retour à la liste</a>
        </form>
    </div>

</div>
